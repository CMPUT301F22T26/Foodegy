<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/IngredientItemDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginTop="50dp"
        android:text="Item Description"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/bestBeforeDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Best Before Date"
        app:layout_constraintStart_toStartOf="@+id/IngredientItemDescription"
        app:layout_constraintTop_toBottomOf="@+id/IngredientItemDescription" />

    <TextView
        android:id="@+id/location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Location"
        app:layout_constraintStart_toStartOf="@+id/bestBeforeDate"
        app:layout_constraintTop_toBottomOf="@+id/bestBeforeDate" />

    <TextView
        android:id="@+id/quantity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Quantity"
        app:layout_constraintStart_toStartOf="@+id/location"
        app:layout_constraintTop_toBottomOf="@+id/location" />

    <TextView
        android:id="@+id/unitCost"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Unit Cost"
        app:layout_constraintStart_toStartOf="@+id/quantity"
        app:layout_constraintTop_toBottomOf="@+id/quantity" />

    <TextView
        android:id="@+id/ingredientCategory"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="50dp"
        android:text="Category"
        app:layout_constraintBottom_toBottomOf="@+id/ingredientUnitCost"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/ingredientDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:text="YYYY-MM-DD"
        app:layout_constraintBottom_toBottomOf="@+id/bestBeforeDate"
        app:layout_constraintStart_toEndOf="@+id/bestBeforeDate" />

    <TextView
        android:id="@+id/ingredientLocation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="[location]"
        app:layout_constraintBottom_toBottomOf="@+id/location"
        app:layout_constraintStart_toStartOf="@+id/ingredientDate" />

    <TextView
        android:id="@+id/ingredientQuantity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="[amount]"
        app:layout_constraintBottom_toBottomOf="@+id/quantity"
        app:layout_constraintStart_toStartOf="@+id/ingredientLocation" />

    <TextView
        android:id="@+id/ingredientUnitCost"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="[amount]"
        app:layout_constraintBottom_toBottomOf="@+id/unitCost"
        app:layout_constraintStart_toStartOf="@+id/ingredientQuantity" />
</androidx.constraintlayout.widget.ConstraintLayout>