<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:orientation="vertical"
    android:background="@drawable/border_shopping_list">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:padding="2dp">

        <TextView
            android:id="@+id/item_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:textSize="30sp"
            android:fontFamily="@font/akaya_telivigala"
            android:textColor="#E6AF2E"/>

        <CheckBox
            android:id="@+id/Bought"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:text="Bought"
            android:fontFamily="@font/akaya_telivigala"
            android:textColor="#E6AF2E"/>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="0dp"
        android:paddingRight="10dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/item_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Description"
            android:textSize="20sp"
            android:fontFamily="@font/akaya_telivigala"
            android:textColor="#E6AF2E"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="right"
            android:orientation="horizontal">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/remove_ingredient"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:gravity="center"
                android:background="@drawable/add_to_storage_button"
                android:text="Add to Storage"
                android:textSize="9sp"
                android:visibility="invisible"
                android:clickable="false"/>
        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/quantity_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Quantity: "

            android:textSize="20sp"
            android:fontFamily="@font/akaya_telivigala"
            android:textColor="#E6AF2E"/>

        <TextView
            android:id="@+id/item_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="[amount]"
            android:textSize="20sp"
            android:fontFamily="@font/akaya_telivigala"
            android:textColor="#E6AF2E"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/unit_cost_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Unit Cost: "
            android:textSize="20sp"
            android:fontFamily="@font/akaya_telivigala"
            android:textColor="#E6AF2E"/>

        <TextView
            android:id="@+id/item_unit_cost"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="[amount]"
            android:textSize="20sp"
            android:fontFamily="@font/akaya_telivigala"
            android:textColor="#E6AF2E"/>

        <TextView
            android:id="@+id/item_category"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25sp"
            android:layout_marginRight="15sp"
            android:layout_weight="0.5"
            android:text="Category"
            android:textAlignment="textEnd"
            android:textSize="20sp"
            android:fontFamily="@font/akaya_telivigala"
            android:textColor="#E6AF2E"/>
    </LinearLayout>

</LinearLayout>