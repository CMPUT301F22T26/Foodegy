<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/black">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="10dp">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:fontFamily="@font/akaya_telivigala"
            android:text="Description"
            android:textColor="#E6AF2E"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/editTextIngredientDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:ems="8"
            android:inputType="textPersonName"
            android:textSize="20sp"
            android:textColor="#E6AF2E"
            android:hint="Enter your description"
            android:fontFamily="@font/akaya_telivigala"
            android:textColorHint="@color/gray_textHint_app_default"
            android:paddingLeft="5dp"
            android:background="@drawable/border_shopping_list"/>
    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="10dp">

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight=".3"
            android:textSize="20sp"
            android:text="Location"
            android:textColor="#E6AF2E"
            android:fontFamily="@font/akaya_telivigala"
            />

        <Spinner
            android:id="@+id/addIngredientLocationSpinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight=".7"
            android:entries="@array/locations_array"
            android:paddingLeft="5dp"
            android:background="@drawable/border_shopping_list"
            android:theme="@style/mySpinnerItemStyle"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="10dp">

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight=".3"
            android:textSize="20sp"
            android:text="Category"
            android:textColor="#E6AF2E"
            android:fontFamily="@font/akaya_telivigala" />

        <Spinner
            android:id="@+id/addIngredientCategorySpinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight=".7"
            android:entries="@array/categories_array"
            android:paddingLeft="5dp"
            android:background="@drawable/border_shopping_list"
            android:theme="@style/mySpinnerItemStyle"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="10dp">

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight=".2"
            android:textSize="20sp"
            android:text="Quantity "
            android:textColor="#E6AF2E"
            android:fontFamily="@font/akaya_telivigala" />

        <EditText
            android:id="@+id/editTextIngredientAmount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight=".7"
            android:ems="5"
            android:inputType="number"
            android:textSize="20sp"
            android:textColor="#E6AF2E"
            android:fontFamily="@font/akaya_telivigala"
            android:hint="Enter the quantity"
            android:textColorHint="@color/gray_textHint_app_default"
            android:paddingLeft="5dp"
            android:background="@drawable/border_shopping_list"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="10dp">

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight=".2"
            android:textSize="20sp"
            android:text="Unit Cost"
            android:textColor="#E6AF2E"
            android:fontFamily="@font/akaya_telivigala" />

        <EditText
            android:id="@+id/editTextIngredientUnitCost"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight=".8"
            android:background="@drawable/border_shopping_list"
            android:ems="5"
            android:fontFamily="@font/akaya_telivigala"
            android:hint="Enter the unit price"
            android:inputType="number"
            android:paddingLeft="5dp"
            android:textColor="#E6AF2E"
            android:textColorHint="@color/gray_textHint_app_default"
            android:textSize="20sp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="10dp">

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text="Best Before"
            android:textColor="#E6AF2E"
            android:fontFamily="@font/akaya_telivigala" />
        <DatePicker
            android:id="@+id/addIngredientDatePicker"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:calendarViewShown="false"
            android:datePickerMode="spinner"
            android:layout_centerInParent="true"
            android:theme="@style/MyDatePicker" />


    </LinearLayout>


</LinearLayout>